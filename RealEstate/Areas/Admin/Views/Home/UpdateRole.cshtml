@model EntityLayer.Concrete.AppRole
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card" style="margin-top: 200px;">
                <div class="card-body">
                    <h4 class="card-title">Rol Güncelleme</h4>
                    <form id="updateRoleForm">
                        <input id="Id" name="Id" type="hidden" value="@Model.Id" />
                        <div class="form-group row">
                            <label for="Name" class="col-sm-3 col-form-label">Rol Adı</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Rol Adı">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button class="btn btn-primary" type="button" onclick="updateRole()">Kaydet</button>
                                <a class="btn btn-primary" href="/Admin/Home/GetAllRole">Geri</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateRole() {
        var model = {
            Name: $('#Name').val(),
            Id: $('#Id').val(),
        };

        $.ajax({
            url: '/Admin/Home/UpdateRole',
            type: 'POST',
            data: model,
            success: function (data) {
                console.log(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>
