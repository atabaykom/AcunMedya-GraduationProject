@model List<EntityLayer.Concrete.ContentCategory>
<style>
    .cardCategory {
        background-size: cover;
        background-position: center;
        margin: 25px;
        width: 100%;
        height: 200px;
        text-align: center;
        display: inline-block;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 30px;
        font-weight: bold;
        color: white;
        margin-bottom: 20px;
    }

    .btnCategory {
        margin-top: 60px;
        width: 50%;
        height: 25px;
    }
</style>
<div class="container">
    <div class="row text-center" id="fh5co-features">
        <div class="col-md-12 heading animate-box">
            <h2>Kategoriler</h2>
        </div>
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <div class="cardCategory" style="background-image: url('https://www.askarsacmetal.com/wp-content/uploads/2024/03/askar-prefabrik-21.webp');">
                            <div class="card-body">
                                <h2 class="card-title">@item.CATNAME</h2>
                                <a href="/Home/AdList?CategoryName=@item.CATNAME" class="btn btnCategory btn-primary">İlanları Göster</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
