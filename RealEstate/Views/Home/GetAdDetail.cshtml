@model List<ContentViewModel>
@{
    ViewData["Title"] = "GetAdDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .list-group-item {
        display: flex;
        justify-content: space-between;
    }

    .description {
        margin-top: 50px;
        text-align: center;
    }

    .carousel-item {
        text-align: center;
    }

    .carousel-inner {
        width: 100%;
    }

    .btnCategory {
        margin-top: 60px;
        width: 100%;
</style>
<br />
