@model UserLoginViewModel

@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title></title>
    <link rel="stylesheet" href="~/dash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/dash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/dash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/dash/css/vertical-layout-light/style.css">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/dash/images/logo.svg" alt="logo">
                            </div>
                            <h6 class="font-weight-light">Devam etmek icin giris yapin.</h6>
                            <form class="pt-3" method="post" href="/Base/Login/Index">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input asp-for="Password" class="form-control" type="password" />
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium">Giriş Yap</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın yok mu ? <a href="/Base/Register" class="text-primary">Kayıt Ol</a>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">  </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
